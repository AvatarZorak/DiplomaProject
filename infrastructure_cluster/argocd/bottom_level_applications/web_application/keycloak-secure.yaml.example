apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
    name: keycloak-application
    namespace: argocd
    annotations:
      argocd.argoproj.io/sync-wave: "2"
    finalizers:
      - resources-finalizer.argocd.argoproj.io
spec:
    project: default
    sources:
      - repoURL: https://gitlab.itgix.com/elsys/alexander-hristov/infrastructure
        targetRevision: main
        path: application_cluster/kubernetes/external_secrets/keycloak-external-secret.yaml
      - repoURL: "registry-1.docker.io/bitnamicharts"
        path: "keycloak"
        chart: keycloak
        targetRevision: 24.4.7
        helm:
            values: |
              auth:
                  existingSecret: "keycloak-admin-credentials"
              tls:
                enabled: true
                autoGenerated: true
  destination:
      name: arn:aws:eks:eu-central-1:722377226063:cluster/ah-app-eks
      namespace: default
  syncPolicy:
      automated:
          prune: true
          selfHeal: true